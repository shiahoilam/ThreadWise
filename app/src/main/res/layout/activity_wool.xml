<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Cotton"
    tools:ignore="ExtraText">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Back Button -->


            <Button
                android:id="@+id/backButton"
                android:layout_width="51dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginBottom="12dp"
                android:background="@null"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:drawablePadding="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF" />



            <TextView
                android:id="@+id/textViewCottonInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wool Information"
                android:textStyle="bold"
                android:textSize="24sp"
                android:paddingBottom="8dp"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <![CDATA[
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    ]]>
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/textViewHowToWash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rectangle_background"
                android:paddingBottom="8dp"
                android:text="Washing Instructions"
                android:textColor="#333333"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/textViewCottonInfo"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="

1. Fill a basin with cool water and add wool-specific detergent.\n\n
2. Submerge the wool garment and gently swirl it for about 5 minutes.\n\n
3. Rinse with cool water until all detergent is gone.\n\n
4. Press out excess water by gently pressing the garment—don’t wring it.\n\n
5. Dry flat: Lay the wool flat on a towel, roll to remove extra water, then unroll and let it air-dry flat."

                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/textViewHowToWash"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />


            <TextView
                android:id="@+id/textViewHowToTakeCare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Care Instructions"
                android:background="@drawable/rectangle_background"
                android:textSize="20sp"
                android:paddingBottom="8dp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/textViewDescription"
                tools:ignore="MissingConstraints" /> <![CDATA[
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    ]]>
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



            <TextView
                android:id="@+id/textViewHowToTakeCareDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Avoid Hanging:\n\t\tAlways fold wool sweaters and lay them flat when storing. Hanging wool can cause it to stretch out of shape.\n\n
2. Keep Wool Dry:\n\t\tWool is prone to moth damage when stored in damp areas. Store it in a cool, dry place.\n\n
3. Use Moth Protection:\n\t\tTo protect wool from moths, store it with natural moth repellents like cedar balls, lavender sachets, or moth-proof bags.\n\n
4. Avoid Plastic Bags:\n\t\tWool needs to breathe, so avoid long-term storage in plastic bags. Use fabric garment bags or cotton storage bins instead."
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/textViewHowToTakeCare"
                tools:ignore="MissingConstraints" />
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



